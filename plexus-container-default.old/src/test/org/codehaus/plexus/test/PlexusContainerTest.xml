<plexus>
  <logging>
    <implementation>org.codehaus.plexus.logging.ConsoleLoggerManager</implementation>
    <logger>
      <threshold>ERROR</threshold>
    </logger>
  </logging>
  <components>
    <component>
      <role>org.codehaus.plexus.test.Component</role>
      <implementation>org.codehaus.plexus.test.DefaultComponent</implementation>
      <configuration>
        <host>localhost</host>
        <port>10000</port>
      </configuration>
    </component>
    <component>
      <role>org.codehaus.plexus.test.ComponentA</role>
      <implementation>org.codehaus.plexus.test.DefaultComponentA</implementation>
      <requirements>
        <requirement>org.codehaus.plexus.test.ComponentB</requirement>
      </requirements>
      <!--

      We need to capture errors in xstream when a field that has been specified in the configuration
      doesn't exist in the target object.

      <configuration>
        <host>localhost</host>
        <port>10000</port>
      </configuration>
      -->
    </component>
    <component>
      <role>org.codehaus.plexus.test.ComponentB</role>
      <implementation>org.codehaus.plexus.test.DefaultComponentB</implementation>
    </component>
  </components>
</plexus>
