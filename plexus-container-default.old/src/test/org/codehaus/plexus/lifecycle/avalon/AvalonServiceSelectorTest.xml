<plexus>

  <components>

    <component>
      <role>org.codehaus.plexus.ServiceASelector</role>
      <implementation>org.codehaus.plexus.lifecycle.avalon.CustomServiceSelector</implementation>
      <configuration>
        <selectable-role>org.codehaus.plexus.ServiceA</selectable-role>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.plexus.ServiceCSelector</role>
      <implementation>org.codehaus.plexus.lifecycle.avalon.CustomServiceSelector</implementation>
        <configuration>
          <selectable-role>org.codehaus.plexus.ServiceC</selectable-role>
        </configuration>
    </component>

    <!--
     |
     | A Service
     |
     | This service implements all the Avalon lifecycle methods.
     |
     -->
    <component>
      <role>org.codehaus.plexus.ServiceA</role>
      <role-hint>only-instance</role-hint>
      <implementation>org.codehaus.plexus.DefaultServiceA</implementation>
      <configuration>
        <host>localhost</host>
        <port>10000</port>
      </configuration>
    </component>

    <!--
     |
     | C Service
     |
     -->
    <component>
      <role>org.codehaus.plexus.ServiceC</role>
      <role-hint>only-instance</role-hint>
      <implementation>org.codehaus.plexus.DefaultServiceC</implementation>
      <configuration>
        <host>localhost</host>
        <port>10000</port>
      </configuration>
    </component>

    <component>
      <role>org.codehaus.plexus.ServiceC</role>
      <role-hint>only-instance-two</role-hint>
      <implementation>org.codehaus.plexus.DefaultServiceC</implementation>
      <configuration>
        <host>localhost</host>
        <port>10000</port>
      </configuration>
    </component>
    
  </components>

</plexus>
